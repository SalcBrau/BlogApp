@model BlogApp.Data.Entities.Post

<div class="post">
    <div class="post-meta">
        <div class="row">
            <div class="post-title">
                <h2> @Html.PostLink(Model) </h2>
            </div>
        </div>
        <div class="row">
            <div class="post-category">
                <span>Category: </span> @Html.CategoryLink(Model.Category);
            </div>
            <div class="post-tags">
                <span>Tags: </span>
                @{ 
                    foreach (var postTag in Model.PostTags)
                    {
                        var tag = postTag.Tag;
                        <div class="tags-div">
                            @Html.TagLink(tag)
                        </div>
                    }
                 }
            </div>
            <div class="posted-date">
                @Model.PostedOn
            </div>
        </div>
    </div>
    <div class="post-body">
        @Html.Raw(Model.ShortDescription);
    </div>
    <div class="post-foot">
        @Html.ActionLink("continue...", "post", "blog",
             new
             {
                 year = Model.PostedOn.Year,
                 month = Model.PostedOn.Month,
                 day = Model.PostedOn.Day,
                 title = Model.UrlSlug
             },
             new { title = "continue..." }
         );
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
